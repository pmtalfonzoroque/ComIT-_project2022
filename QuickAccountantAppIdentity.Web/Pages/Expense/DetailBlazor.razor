@attribute [Authorize(Roles = "Customer")]
@page "/expenses/detail/{id:int}"

@if (ExpenseRecord != null)
{
    <div class="row">
        <div class="col-lg-9">
            <h1>@ExpenseRecord.CreatedDate</h1>
        </div>
        <div class="col-lg-3 text-right">
            <a class="btn btn-secondary btn-sm" href="/expenses" role="button">Go Back To List</a>
        </div>
    </div>
 
    <table class="table">
        <tbody>
        <tr>
                <th scope="row">Total</th>
                <td>@ExpenseRecord.Total</td>
            </tr>
            <tr>
                <th scope="row">ExpenseType</th>
                <td>@ExpenseRecord.ExpenseType?.Name</td>
            </tr>
            <tr>
                <th scope="row">Place</th>
                <td>@ExpenseRecord.Place</td>
            </tr>
            <tr>
                <th scope="row">PayMethod</th>
                <td>@ExpenseRecord.PayMethod</td>
            </tr>
        </tbody>
    </table>
}


